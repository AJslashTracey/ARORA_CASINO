{
  "name": "aurora-casino",
  "version": "1.0.0",
  "description": "Aurora Online Casino - School Project",
  "scripts": {
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "cd client && npm install --include=dev && npm run build && cd ../server && npm install --omit=dev",
    "start": "cd server && npm start"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
